<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_app"
    android:orientation="vertical"
    android:padding="15dp"
    tools:openDrawer="start">
    <!--    tools:context=".UserHomePageActivity"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_rounded_shadow"
        android:elevation="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btnToggle"
            android:layout_width="65dp"
            android:layout_height="55dp"
            android:contentDescription="Menu"
            android:src="@drawable/ic_toggle_button" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="MY BOOK"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Chọn loại sách"
            android:textColor="@color/secondary_text"
            android:textSize="16sp" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/bg_spinner"
            android:padding="10dp"
            android:spinnerMode="dropdown" />
    </LinearLayout>

    <!-- Checkboxes on a single row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/checkBoxShare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_checkbox"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="Share"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/checkBoxSale"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_checkbox"
            android:button="@null"
            android:gravity="center"
            android:padding="10dp"
            android:text="Sale"
            android:textColor="@color/primary_text"
            android:textSize="14sp" />
    </LinearLayout>
    <Button
        android:id="@+id/btnFilter"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bg_button"
        android:text="Lọc sách"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp" />
    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#E0E0E0"
        android:dividerHeight="8dp" />
</LinearLayout>

