<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/userDetailBookBackButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="start"
        android:contentDescription="Back Arrow"
        android:padding="5dp"
        android:src="@drawable/ic_arrow_back" />

    <!-- Book Image with Background -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="16dp">

        <ImageView
            android:id="@+id/userBackgroundImage"
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:alpha="0.3"
            android:contentDescription="Background Image"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/userBookImage"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_centerInParent="true"
            android:background="@drawable/image_rounded"
            android:clipToOutline="true"
            android:contentDescription="Book Image"
            android:scaleType="centerCrop"
            android:src="@drawable/logo" />

    </RelativeLayout>

    <TextView
        android:id="@+id/userAuthorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="Louisa May Alcott"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <!-- Book Name and Price -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userBookName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Book Name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userBookPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price"
            android:textColor="@android:color/black"
            android:textSize="18dp" />
    </LinearLayout>

    <!-- Book Category -->
    <TextView
        android:id="@+id/userDetailBookCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Thể loại"
        android:textColor="@android:color/black"
        android:textSize="18dp" />

    <!-- Book Content -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nội dung bên trong, bao gồm TextView -->
            <TextView
                android:id="@+id/userDetailBookContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book Content Summary"
                android:textColor="@color/black_53"
                android:textSize="16dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>