<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền của Spinner -->
    <solid android:color="@android:color/white" />

    <!-- Viền xung quanh -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" /> <!-- Màu xám nhạt -->

    <!-- Bo góc -->
    <corners android:radius="12dp" />

    <!-- Padding bên trong -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
